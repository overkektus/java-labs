<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ped.bstu.by.bmr.MainActivity">

    <GridLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:rowCount="7"
        android:columnCount="2"
        android:padding="20dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">


        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Пол" />

        <LinearLayout
            android:layout_column="1"
            android:layout_row="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radioButtonFamale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sex_female" />
            <RadioButton
                android:id="@+id/radioButtonMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sex_male" />
        </LinearLayout>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_column="0"
            android:layout_row="1"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вес" />

        <LinearLayout
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextWeight"
                android:layout_height="wrap_content"
                android:layout_width="42dp"
                android:ems="10"
                android:inputType="number" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="кг."/>
        </LinearLayout>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_column="0"
            android:layout_row="2"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Рост" />

        <LinearLayout
            android:layout_column="1"
            android:layout_row="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextHeight"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="см."/>
        </LinearLayout>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_column="0"
            android:layout_row="3"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Возраст" />

        <LinearLayout
            android:layout_column="1"
            android:layout_row="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextAge"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="лет"/>

        </LinearLayout>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_column="0"
            android:layout_row="4"
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Уровень активности" />

        <Spinner
            android:id="@+id/spinnerActivityLevel"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:entries="@array/activityLevel"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_columnSpan="2"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/result"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="1453"
                />

        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_row="6"
            android:onClick="onClickResults"
            android:text="Пересчитать" />


    </GridLayout>
</android.support.constraint.ConstraintLayout>
